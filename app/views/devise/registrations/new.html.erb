<div class="container">
  <section id="content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h1><%= t('.sign_up') %></h1>
       <!--サインアップ時に名前を入力できるようにフォームを追加-->
      <div class="field">
<!--    <%#= f.label :name %><br />-->
        <%= f.text_field :name, autofocus: true, placeholder: "name", type: "text", id: "user_name" %>
      </div>

      <div class="field">
<!--    <%#= f.label :email %><br />-->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", type: "text", id: "user_email" %>
      </div>

      <div class="field">
        <%#= f.label :password %>
        <%# if @minimum_password_length %>
<!--      <em><%#= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>-->
<!--    <%# end %><br />-->
         <%= f.password_field :password, autocomplete: "new-password",placeholder: "Password of　6 characters or more",type: "password", id: "password" %>
      </div>

      <div class="field">
<!--        <%#= f.label :password_confirmation %><br />-->
        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Password_confirmation",type: "password", id: "passwordconfirm" %>
      </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %><br><br>
  </div>
      <%= render "devise/shared/links" %>

  <% end %>
  </section>
</div>
