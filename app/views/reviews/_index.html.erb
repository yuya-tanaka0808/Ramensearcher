
<h3>レビュー一覧</h3>
<% reviews.each do |review| %>
  <h5><%= review.user.name %>さん</h5>
  <%= review.comment %>
  <%= review.rating %>
  <%= image_tag review.image.url, size: '614x985'%>
  <% if review.user_id == current_user.id %>
    <td><%= link_to 'edit', edit_review_path(review) %></td>
  <% end %>
<% end %>
