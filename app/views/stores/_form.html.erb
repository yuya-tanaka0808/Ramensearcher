<%= form_with(model: @store, local: true) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>
      <ul>
        <% store.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
  <!-- <div class="separete"> -->
    <div class="field form-group">
      <%= form.label :name %>
      <br>
      <%= form.text_field :name ,class: "form-control",placeholder: "店名を入力(スペースは半角で統一)"%>
    </div>

    <div class="field form-group">
      <%= form.label :address %>
      <br>
      <%= form.text_field :address,class: "form-control",placeholder: "住所を入力" %>
    </div>

    <div class="field form-group">
      <%= form.label :contact %>
      <br>
      <%= form.text_field :contact,class: "form-control",placeholder: "連絡先を入力" %>
    </div>

    <div class="field form-group">
      <%= form.label :line_name %>
      <br>
      <%= form.text_field :line_name,class: "form-control",placeholder: "路線名を入力" %>
    </div>

    <div class="field form-group">
      <%= form.label :station %>
      <br>
      <%= form.text_field :station,class: "form-control",placeholder: "最寄り駅を入力" %>
    </div>

    <div class="field form-group">
      <%= form.label :minutes_on_foot %>
      <br>
      <%= form.text_field :minutes_on_foot,class: "form-control",placeholder: "徒歩時間を入力(数字のみ)" %>
    </div>

    <div class="field form-group">
      <%= form.label :link %>
      <br>
      <%= form.text_field :link,class: "form-control",placeholder: "リンクを入力" %>
    </div>

    <div class="field form-group">
      <%= form.label :open_closed %>
      <br>
      <%= form.text_field :open_closed,class: "form-control",placeholder: "営業時間を入力(表示用)" %>
    </div>

    <div class="field form-group">
      <%= form.label :regular_holiday %>
      <br>
      <%= form.text_field :regular_holiday,class: "form-control",placeholder: "定休日を入力(表示用)" %>
    </div>

    <div class="field form-group">
      <%= form.label :note %>
      <br>
      <%= form.text_field :note,class: "form-control",placeholder: "備考を入力(席数など)" %>
    </div>

    <div class="field form-group">
      <%= form.label :latitude %>
      <br>
      <%= form.text_field :latitude,class: "form-control",placeholder: "緯度を入力(Googlemap用)" %>
    </div>

    <div class="field form-group">
      <%= form.label :longitude %>
      <br>
      <%= form.text_field :longitude,class: "form-control",placeholder: "経度を入力(Googlemap用)" %>
    </div>
  <!-- </div> -->
  <br>
  <div>
  <% @tag_number = 1 %>
  <%= form.fields_for :menus do |menu| %>
    <h5><%= t('activerecord.models.menu') %><%= @tag_number %></h5>
    <% @tag_number += 1 %>
    <div class="form-group">
      <%= menu.label :name %><br>
      <%= menu.text_field :name,class: "form-control",placeholder: "品名を入力" %>
    </div>
    <div class="form-group">
      <%= menu.label :price %><br>
      <%= menu.text_field :price,class: "form-control",placeholder: "価格を入力" %>
    </div>
    <div class="form-group">
      <%= menu.label :"taste" %><br>
      <%= menu.text_field :taste,class: "form-control",placeholder: "味を入力(検索用)" %><br>
    </div>
  <% end %>
  </div>
  <br>
  <div>
  <% @tag_number = 1 %>
  <%= form.fields_for :openings do |opening| %>
    <h5><%= t('activerecord.models.opening') %><%= @tag_number %></h5>
    <% @tag_number += 1 %>
    <div class="form-group">
      <%= opening.label :open_hour %><br>
      <%= opening.time_field :open_hour,class: "form-control" %>
    </div>
    <div>
      <%= opening.label :last_order %><br>
      <%= opening.time_field :last_order,class: "form-control" %>
    </div>
    <div>
      <%= opening.label :day_week %><br>
      <%= opening.text_field :day_week,class: "form-control",placeholder: "曜日を入力" %><br>
    </div>
    <div>
      <%= opening.label :weeks %><br>
      <%= opening.text_field :weeks,class: "form-control",placeholder: "週を入力" %><br>
    </div>
  <% end %>
  </div>
  <br>
  <br>
  <div>
  <% @tag_number = 1 %>
  <%= form.fields_for :images do |image| %>
    <h5><%= t('activerecord.models.image') %><%= @tag_number %></h5>
    <% @tag_number += 1 %>
    <div class="inline_block form-group">
      <%= image.file_field :image, class: "form-control-file" %>
     <small>最大10MB</small>
    </div>
  <% end %>
  <br>
  <br>
  <%= form.submit 'submit' %>
<% end %>
</div>
</div>
